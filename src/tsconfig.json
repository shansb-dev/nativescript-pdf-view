{
    "compilerOptions": {
        "module": "ESNext",
        "target": "es2017",
        "moduleResolution": "node",
        "noEmitHelpers": true,
        "noEmitOnError": true,
        "skipLibCheck": true,
        "declaration": true,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "es2018",
            "es2017",
            "dom",
            "es6"
        ],
        "baseUrl": ".",
        "paths": {
            "*": [
                "./node_modules/@nativescript/core/*",
                "./node_modules/*"
            ]
        },
        "sourceMap": true,
        "pretty": true,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "noImplicitUseStrict": false,
        "noFallthroughCasesInSwitch": true,
        "typeRoots": [
            "./node_modules/@types",
            "./node_modules"
        ],
        "types": [
        ],
        "plugins": [
            {
                "transform": "@nativescript/webpack/transformers/ns-transform-native-classes",
                "type": "raw"
            }
        ]
    },
    "exclude": [
        "demo",
        "node_modules",
        "out"
    ],
    "compileOnSave": false
}
